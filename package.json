{
  "name": "gitbook-plugin-mermaid",
  "description": "Plugin for GitBook which renders Mermaid flow from markdown.",
  "main": "build/index.js",
  "version": "1.0.1",
  "engines": {
    "gitbook": ">=3.0.0"
  },
