  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "jsdom": "^11.3.0",
    "json-stringify-safe": "^5.0.1",
    "mermaid": "^7.1.0",
    "puppeteer": "^0.12.0"
  },
  "license": "Apache 2",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "raw-loader": "^0.5.1",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0"
  },
  "scripts": {
